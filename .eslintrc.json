{
    "extends": "eslint:recommended",
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "sourceType": "module"
    },
    "globals": {
        "angular": true,
        "$": true,
        "jQuery": true,
        "$$$storage": true,
        "$$$I18N": true,
        "Highcharts": true,
        // novnc
        "$D": true,
        "WebUtil": true,
        "RFB": true
    },
    "rules": {
        "no-console": "off",
        "indent": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-unused-vars": ["warn"],
        "no-extra-semi": ["warn"]
    }
}
